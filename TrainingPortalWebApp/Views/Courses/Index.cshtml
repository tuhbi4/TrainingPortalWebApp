@model IEnumerable<TrainingPortal.Entities.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

@{
    int i;
    string commaSeparator = ", ";
    string separator = " | ";
}

<h1>Courses</h1>
@if (User.IsInRole("editor") || User.IsInRole("admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TargetAudienciesList)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i = 1;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @foreach (var audience in item.TargetAudienciesList)
                    {
                        @Html.DisplayFor(item => audience.Name)
                        @if (i < item.TargetAudienciesList.Count)
                        {
                            @commaSeparator
                            i += 1;
                        }
                    }
                </td>
                <td>
                    @if (User.IsInRole("editor") || User.IsInRole("admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id })
                        @separator
                    }
                    @if (User.IsInRole("editor") || User.IsInRole("admin") || User.IsInRole("user"))
                    {
                        @Html.ActionLink("Details", "Details", new { id=item.Id })
                    }
                    @if (User.IsInRole("editor") || User.IsInRole("admin"))
                    {
                        @separator
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


