@model Test

@{
    ViewData["Title"] = "Start test";
    int chancesLeft = ViewBag.СhancesLeft;
}

<div>
    <form asp-action="NextQuestion" asp-route-testId="@Model.Id" asp-route-questionNumber="1" asp-route-chancesLeft="@chancesLeft">
        <div class="d-flex flex-column align-items-center mt-5">
            <h3>You are about to start taking the test</h3>
            <h1>@Model.Name</h1>
            <hr class="border border-1 border-secondary w-100" />
            <h4>Here are some rules and tips:</h4>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Some rule 1</li>
                <li class="list-group-item">Some rule 2</li>
                <li class="list-group-item">Some hint</li>
            </ul>
            <hr class="border border-1 border-secondary w-100" />
            <input type="submit" value="Run test" class="btn btn-primary btn-lg" />
        </div>
    </form>
</div>