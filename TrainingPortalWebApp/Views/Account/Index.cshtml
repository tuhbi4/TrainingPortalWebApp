@model IEnumerable<EditUserViewModel>

@{
    ViewData["Title"] = "Accounts";
}

<h1>Accounts</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-outline-info">Create New</a>
</p>
<table class="table table-secondary table-striped table-hover border-white table-sm table-rounded">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class="btn btn-outline-warning" })
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class="btn btn-outline-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
