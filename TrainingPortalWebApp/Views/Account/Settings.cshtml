@model SettingsUserViewModel


@{
    ViewData["Title"] = "Account settings";
}

<h1>Account settings</h1>
<hr />
<div class="row">
    <div class="col-md-8 mx-auto">
        <form asp-action="Settings" asp-controller=Account method=post>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <div class="row">
                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Login" class="form-control" placeholder="" />
                        <label asp-for="Login" class="ml-3"></label>
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="" />
                        <label asp-for="Email" class="ml-3"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="" />
                        <label asp-for="Password" class="ml-3"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="" />
                        <label asp-for="ConfirmPassword" class="ml-3"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Lastname" class="form-control" placeholder="" />
                        <label asp-for="Lastname" class="ml-3"></label>
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Firstname" class="form-control" placeholder="" />
                        <label asp-for="Firstname" class="ml-3"></label>
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-floating mb-3">
                        <input asp-for="Patronymic" class="form-control" placeholder="" />
                        <label asp-for="Patronymic" class="ml-3"></label>
                        <span asp-validation-for="Patronymic" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <input type="submit" value="Save" class="btn btn-primary" />
        </form>
    </div>
</div>